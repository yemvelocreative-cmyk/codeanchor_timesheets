<?phpuse WHMCS\Database\Capsule;if (!defined("WHMCS")) {    die("Access Denied");}// Fetch admin roles$roles = Capsule::table('tbladminroles')->orderBy('name')->get();$tabs = [    'departments' => 'Departments',    'task_categories' => 'Task Categories',    'timesheets' => 'Timesheets',    'pending_timesheets' => 'Pending Timesheets',    'reports' => 'Reports',    'settings' => 'Settings',];// Fetch hidden tabs per role$hiddenTabsByRole = [];$hiddenRows = Capsule::table('mod_timekeeper_hidden_tabs')->get();foreach ($hiddenRows as $row) {    $hiddenTabsByRole[$row->role_id][] = $row->tab_name;}?><div class="timekeeper-hide-tabs-settings" style="margin-bottom: 32px;">    <h4>Hide Menu Tabs by Admin Role</h4>    <p class="text-muted" style="margin-bottom:16px;">        Tick a box to <strong>hide</strong> a tab for that admin role. By default, all tabs are visible.<br>    </p>    <form method="post">        <input type="hidden" name="hidemenutabs_save" value="1">        <table class="table table-bordered" style="min-width: 700px;">            <thead>                <tr>                    <th>Admin Role</th>                    <?php foreach ($tabs as $tabKey => $tabLabel): ?>                        <th><?= htmlspecialchars($tabLabel) ?></th>                    <?php endforeach; ?>                </tr>            </thead>            <tbody>            <?php foreach ($roles as $role): ?>                <tr>                    <td><?= htmlspecialchars($role->name) ?></td>                    <?php foreach ($tabs as $tabKey => $tabLabel): ?>                        <td style="text-align: center;">                            <input type="checkbox" name="hide_tabs[<?= $role->id ?>][]" value="<?= $tabKey ?>"                            <?php if (isset($hiddenTabsByRole[$role->id]) && in_array($tabKey, $hiddenTabsByRole[$role->id])): ?>                                checked                            <?php endif; ?>                            >                        </td>                    <?php endforeach; ?>                </tr>            <?php endforeach; ?>            </tbody>        </table>        <button type="submit" class="btn btn-primary">Save Tab Visibility</button>    </form></div>